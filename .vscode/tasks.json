{
    "tasks": [
        {
            "label": "run Screenshots",
            "type": "shell",
            "command": "cd tools && bash ./screenshots.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "run colorconvert",
            "type": "shell",
            "command": "cd tools && python3 ./colorconvert.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "delete autosave",
            "type": "shell",
            "command": "rm",
            "args": [
                "-r",
                "${workspaceFolder}/../../autosave/*"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run perf",
            "type": "shell",
            "command": "./tools/perf.sh",
            "args": [
                "USE_GPROF=1",
                "NDEBUG=1"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "make clean",
                "make -O2 -g3 g++"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
        },
        {
            "label": "make ASAN g++",
            "type": "shell",
            "command": "${workspaceFolder}/tools/make_parallel.sh",
            "isBackground": false,
            "args": [
                "USE_ASAN=1",
                "NDEBUG=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run Rack ASAN",
            "type": "shell",
            "command": "cd ../../ && ./RackASAN -d 2>&1",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "env": {
                    "ASAN_OPTIONS": "detect_leaks=1:symbolize=1:symbolize_paths=/home/b/dev/RackASAN/plugins/SIM",
                    "ASAN_SYMBOLIZER_PATH": "/usr/bin/llvm-symbolizer",
                }
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(Direct|Indirect) leak of \\d+ byte\\(s\\) in \\d+ object\\(s\\) allocated from:$",
                    "message": 0
                }
            }
        },
        {
            "label": "make debug g++",
            "type": "shell",
            "command": "${workspaceFolder}/tools/make_parallel.sh",
            "isBackground": false,
            "args": [
                "DEBUG=1"
            ],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C:/msys64/mingw64.exe",
                        "args": [
                            "-l"
                        ]
                    },
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
                        "DEBUG": "1"
                    }
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
