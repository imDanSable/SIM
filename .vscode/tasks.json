{
    "tasks": [
        {
            "label": "run perf",
            "type": "shell",
            "command": "./perf.sh",
            "args": [
                "USE_GPROF=1",
                "NDEBUG=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make clean",
                "make -O2 -g3 g++"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
        },
        {
            "label": "make ASAN g++",
            "command": "make",
            "isBackground": false,
            "args": [
                "USE_ASAN=1",
                "NDEBUG=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run Rack ASAN",
            "type": "shell",
            "command": "cp ./plugin.so ~/.Rack2/plugins-lin-x64/SIM/plugin.so && cd ../../ && ./Rack -s /home/b/dev/RackASAN 2>&1",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "ASAN_OPTIONS": "detect_leaks=1:symbolize=1:symbolize_paths=/home/b/dev/RackASAN/plugins/SIM",
                    "ASAN_SYMBOLIZER_PATH": "/usr/bin/llvm-symbolizer",
                }
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(Direct|Indirect) leak of \\d+ byte\\(s\\) in \\d+ object\\(s\\) allocated from:$",
                    "message": 0
                }
            }
        },
