        {
            "label": "bear -- make",
            "type": "shell",
            "command": "bear",
            "args": [
                "--",
                "make",
                // "USE_CLANG=1",
                "BEAR=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make clean"
            ]
        },
        {
            "label": "Valgrind Check",
            "type": "shell",
            "command": "valgrind",
            "options": {
                "cwd": "${workspaceFolder}/../.."
            },
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "--log-file=build/valgrind-out.txt",
                "./Rack",
                "-d"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "run Rack Catch2 tests",
            "type": "shell",
            "command": "cd ../../ && ./Rack --runtests='-s' -d 2>&1",
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "cppcheck",
            "type": "shell",
            "command": "cppcheck",
            "args": [
                "--template='gcc'",
                "-i${workspaceFolder}/src/biexpander/sigslot/",
                "--enable=all",
                "--inline-suppr",
                "--force",
                "--inconclusive",
                "--checkers-report='./build/cppcheck_report.txt'",
                "--suppress=missingIncludeSystem",
                "--suppress=unusedFunction",
                // "${workspaceFolder}/src/"
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        }
