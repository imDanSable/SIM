{
    "terminal.integrated.env.windows": {
        "CHERE_INVOKING": "1", // open mysys terminal at the current path
        "PATH": "C:/msys64/mingw64/bin;C:/msys64/usr/bin;${env:PATH}"
    },
    // "terminal.external.windowsExec": "C:\\msys64\\mingw32.exe",
    "terminal.integrated.profiles.windows": {
        "msys mingw64": {
            "path": "C:/msys64/msys2_shell.cmd",
            "args": [
                "-defterm",
                "-here",
                "-no-start",
                "-mingw64"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "msys mingw64",
    "terminal.explorerKind": "integrated",
    "files.eol": "\n",
    "files.associations": {
